// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subject {
  subject_id        String  @id @default(uuid())
  sub_name          String
  description       String
  chapter           Chapter @relation(fields: [chapterChapter_id], references: [chapter_id])
  fee               Int
  chapterChapter_id String
}

model Chapter {
  chapter_id      String    @id @default(uuid())
  chapter_name    String
  description     String?
  lesson          Lesson    @relation(fields: [lessonLesson_id], references: [lesson_id])
  Subject         Subject[]
  lessonLesson_id String
}

model Lesson {
  lesson_id           String    @id @default(uuid())
  lesson_name         String
  description         String
  content             Content   @relation(fields: [contentContent_id], references: [content_id])
  parallel_text       String
  question_bank       Question  @relation(fields: [questionQuestion_id], references: [question_id])
  formula             Formula   @relation(fields: [formulaFormula_id], references: [formula_id])
  Chapter             Chapter[]
  contentContent_id   String
  questionQuestion_id String
  formulaFormula_id   String
}

model Question {
  question_id   String   @id @default(uuid())
  question_type String
  description   String?
  text          String?
  answer        String?
  Lesson        Lesson[]
}

model Content {
  content_id   String   @id @default(uuid())
  content_type String
  link         String?
  description  String?
  Lesson       Lesson[]
}

model Formula {
  formula_id  String   @id @default(uuid())
  description String?
  text        String?
  Lesson      Lesson[]
}
